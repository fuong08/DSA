 /* Node is defined as :
 class Node 
    int data;
    Node left;
    Node right;
    
    */

    public static Node insert(Node root,int data) {
        Node head = root;
        
        if (root == null) {
            head = new Node(data); return head;
        }
        
        while (root != null) {
            if (data < root.data) {
                if (root.left == null) {
                    root.left = new Node(data); break;
                } else {
                    root = root.left;
                }
            } else {
                if (root.right == null) {
                    root.right = new Node(data); break;
                } else {
                    root = root.right;
                }
            }
        }
        
        return head;
        
    }
